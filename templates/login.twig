{% extends "_layout.twig" %}

{% set title = "Log in" %}
{% set noindex = true %}
{% set pagename = "/Special:Login" %}

	{% block content %}
<h1>Log in</h1>

{% if error %}
	<p class="error">Error while trying to register: <br>- {{ error | join('<br>- ') | raw }}</p>
{% endif %}

<a class="gh-link" href="/Special:GithubOauth"><img src="/assets/github.svg" height=32> Sign in with GitHub</a>


<h3>Local login</h3>

<form method="POST">
	<p>Username<br>
		<input type="text" name="name" size="25" maxlength="25" required></p>

	<p>Password<br>
		<input type="password" name="pass" size="25" maxlength="64" required></p>

	<p><input type="submit" name="action" value="Login"></p>
</form>
	{% endblock %}